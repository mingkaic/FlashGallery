extends layout

block content
	.layout1.vertPager
		#uploader
			form(action="/uploads", method="post", enctype="multipart/form-data")
				div
					input(type="file", name="displayImage")
				div
					input(type="submit")
		#gallery
			div(ng-controller='imgCtrl', ng-init='imageArr= #{JSON.stringify(imageArr)}')
				div(ng-repeat='imgPath in imageArr')
					img(ng-src="{{imgPath}}", ng-click='getThis(imgPath)')
					span
						button.btn.btn-default(type='submit', ng-click='clearThis(imgPath)', title='remove') Remove